{
  "main": "lib/index.js",
  "name": "obtuse",
  "version": "0.3.0",
  "description": "Bruce&#39;s Obtuse Spruce Goose",
  "license": "UNLICENSED",
  "author": "Allan Hortle",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:allanhortle/obtuse.git"
  },
  "bugs": {
    "url": "https://github.com/allanhortle/obtuse/issues"
  },
  "private": false,
  "scripts": {
    "build": "rm -rf lib && babel src --out-dir lib  --copy-files",
    "prepublish": "yarn run build",
    "ava": "NODE_ENV=test ava",
    "check-coverage": "NODE_ENV=test nyc check-coverage --branches 100.0  --functions 100.0 --lines 100.0",
    "docs": "jsdoc -c jsdoc.json",
    "flow": "flow check",
    "lint": "eslint src --ext js,jsx",
    "lint-fix": "eslint src --ext js,jsx --fix",
    "test": "NODE_ENV=test nyc --report-dir=./coverage ava && yarn run check-coverage",
    "test-all": "NODE_ENV=test yarn run lint && yarn run flow && yarn run test"
  },
  "dependencies": {
    "goose-css": "^0.5.0",
    "moment": "^2.18.1",
    "numeral": "^2.0.6",
    "prop-types": "^15.5.8",
    "stampy": "^0.29.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.5.0",
    "babel-core": "^6.18.2",
    "babel-preset-blueflag": "^0.3.0",
    "dotenv": "^2.0.0",
    "eslint": "^3.9.1",
    "eslint-config-blueflag": "^0.4.0",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.2.1",
    "jsdonk": "^0.2.1",
    "nyc": "^10.0.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6"
  },
  "ava": {
    "require": [
      "./pretest",
      "babel-register"
    ],
    "babel": {
      "presets": [
        "blueflag"
      ],
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "files": [
      "src/**/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*-test.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "babel-register"
    ]
  }
}
